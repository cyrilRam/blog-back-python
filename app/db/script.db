CREATE TABLE category (
 id UUID DEFAULT uuid_generate_v4(),  -- Utilisation de la fonction uuid_generate_v4() pour générer automatiquement l'ID
name VARCHAR(100),
PRIMARY KEY (id),
UNIQUE(name)
);

CREATE TABLE post (
    id UUID DEFAULT uuid_generate_v4(),  -- Utilisation de la fonction uuid_generate_v4() pour générer automatiquement l'ID
    title VARCHAR(100),
    content TEXT,
    created_date TIMESTAMP DEFAULT CURRENT_TIMESTAMP,  -- Utilisation de CURRENT_TIMESTAMP pour définir automatiquement la date de création
    category_id UUID,
    PRIMARY KEY (id),
    FOREIGN KEY (category_id) REFERENCES category(id)
);